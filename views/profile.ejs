<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-camisetasFC.png" />
	
	<title>CamisetasFC</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	<!-- Header -->
	<header class="main-header">
		<% if (user) {%>
			<%- include('./partials/headerLogueado.ejs')%>
		<%} else{%>
			<%- include('./partials/header.ejs')%>	
		<% }%>
		
	</header>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src=<%= foto %> alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center">
					<% if (user.id == id) {%>
						<h1 class="main-title"><%- user.username%> 
						<a href="/users/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<%} else{%>
						<h1 class="main-title"><%- nombreUsuario %> 
						<a class="btn mt-3 ml-4" href="">SEGUIR</a>
					</h1>
					<% }%>
					
					
				</div>
				<div>
					<h4><%=mail%>
					</h4>
					<ul class="">
						<li><%= perfil.length %> productos</li>
						<li>200 seguidores</li>
						<li><%= comentarios.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<% if (perfil.length == 0) {%>
				<h2>Este usuario no ha subido ningun producto</h2>
			<% } %>
			<!-- Show mis productos -->
			<% for (let index = 0; index < perfil.length; index++) {%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/product/<%= perfil[index].id  %>">
							<figure class="product-box_image">
								<img src="<%=perfil[index].foto%>" alt="" height="250" width="330">
							</figure>
							<article class="product-box_data">
								<h2><%= perfil[index].producto %></h2>
								<p><%= perfil[index].descripcionProd %></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% }%>
			
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<footer class="main-footer">
		<%- include('./partials/footer.ejs')%>
	</footer>
	<!-- /footer -->
</body>	
</html>