<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-camisetasFC.png" />

	<title>CamisetasFC</title>
			<!-- Font Awesome Stylesheet -->
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
			<!-- Bootstrap Grid Stylesheet -->
			<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
			<!-- Own Stylesheet -->
			<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<header class="main-header">
		<%- include('./partials/header.ejs')%>
	</header>
	<!-- /Header -->
	
	<!-- Novedades -->
	<div class="container products-wrapper formu">
		<div class="row contenedorPadre">
			<div class="col-12 contenedorPadre1">
				<h2 class="products-title">Registro</h2>
			</div>
		<form action="/users/register" method="post" class="formulario">
			<div class="form-outline mb-4">
				<input type="text" id="username" name="username" required>
				<label class="form-label" for="username">Nombre de usuario</label>
			</div>
		<!-- Email input -->
			<div class="form-outline mb-4">
				<input type="email" id="mail" name="email" required>
				<label class="form-label" for="email">Email</label>
			</div>

			<!-- Password input -->
			<div class="form-outline mb-4">
				<input type="password" id="contrasenia" name="contrasenia" required>
				<label class="form-label" for="contrasenia">Contrase√±a</label>
			</div>

			<div class="form-outline mb-4">
				<input type="date" id="fecha" name="fecha" required>
				<label for="fecha" class="form-label">fecha de nacimiento</label>
				
			</div>
			<div class="form-outline mb-4">
				<input type="number" id="dni" name="dni" required>
				<label for="dni" class="form-label">DNI</label>
			</div>
			<div class="form-outline mb-4">
				<input type="text" id="ftoPerfil" name="ftoPerfil" required>
				<label for="ftoPerfil" class="form-label">Foto de perfil</label>
			</div>
			
			<% if (error) { %>
				<br>
				<p><%= error %></p>
			<% } %>

			<!-- Submit button -->
			<button type="submit" class="btn btn-primary btn-block mb-4">Enviar</button>
			
			
	</form>
	
		
	
	</div>
	</div>


	<!-- footer -->
	<footer class="main-footer">
		<%- include('./partials/footer.ejs')%>
	</footer>
	<!-- /footer -->
</body>

</html>